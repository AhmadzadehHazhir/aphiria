{
  "name": "aphiria/aphiria",
  "description": "The Aphiria framework",
  "keywords": [
    "PHP",
    "API",
    "REST"
  ],
  "authors": [
    {
      "name": "David Young",
      "email": "dave@aphiria.com",
      "role": "Architect"
    }
  ],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Aphiria\\Api\\": "src/Api/src",
      "Aphiria\\Configuration\\": "src/Configuration/src",
      "Aphiria\\Console\\": "src/Console/src",
      "Aphiria\\Exceptions\\": "src/Exceptions/src",
      "Aphiria\\Middleware\\": "src/Middleware/src",
      "Aphiria\\Net\\": "src/Net/src",
      "Aphiria\\RouteAnnotations\\": "src/RouteAnnotations/src",
      "Aphiria\\Routing\\": "src/Router/src",
      "Aphiria\\Serialization\\": "src/Serialization/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aphiria\\Api\\Tests\\": "src/Api/tests",
      "Aphiria\\Configuration\\Tests\\": "src/Configuration/tests",
      "Aphiria\\Console\\Tests\\": "src/Console/tests",
      "Aphiria\\Exceptions\\Tests\\": "src/Exceptions/tests",
      "Aphiria\\Middleware\\Tests\\": "src/Middleware/tests",
      "Aphiria\\Net\\Tests\\": "src/Net/tests",
      "Aphiria\\RouteAnnotations\\Tests\\": "src/RouteAnnotations/tests",
      "Aphiria\\Routing\\Tests\\": "src/Router/tests",
      "Aphiria\\Serialization\\Tests\\": "src/Serialization/tests"
    }
  },
  "require": {
    "doctrine/annotations": "2.0.*@dev",
    "ext-ctype": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "monolog/monolog": "1.23.*",
    "opis/closure": "3.1.*",
    "opulence/collections": "1.1.*@dev",
    "opulence/environments": "1.1.*@dev",
    "opulence/io": "1.1.*@dev",
    "opulence/ioc": "dev-develop",
    "php": "^7.4",
    "psr/log": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~8.0"
  },
  "scripts": {
    "lint-check": "php-cs-fixer fix --config=.php_cs -v --diff --dry-run",
    "lint-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "minimum-stability": "dev"
}
